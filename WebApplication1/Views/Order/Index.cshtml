@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<div class="row">
    @foreach (var order in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order #@order.Id</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@order.OrderDate.ToString("g")</dd>

                        <dt class="col-sm-4">Guest Name</dt>
                        <dd class="col-sm-8">@order.GuestName</dd>

                        <dt class="col-sm-4">Guest Email</dt>
                        <dd class="col-sm-8">@order.GuestEmail</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8">@order.TotalAmount.ToString("C")</dd>
                    </dl>

                    <h6 class="mt-3">Order Items:</h6>
                    <ul class="list-unstyled">
                        @foreach (var item in order.OrderItems)
                        {
                            <li>
                                @item.Product.Name x @item.Quantity
                                (@((item.UnitPrice * item.Quantity).ToString("C")))
                            </li>
                        }
                    </ul>

                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Place New Order</a>
    <a asp-action="Track" class="btn btn-secondary">Track Order</a>
</div> 