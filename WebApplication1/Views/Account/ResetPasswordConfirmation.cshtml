@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center mb-0"><i class="fas fa-check-circle me-2"></i>Password Reset Complete</h2>
            </div>
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-check-circle fa-4x text-success"></i>
                </div>
                <h3>Password Reset Successful!</h3>
                <p class="lead">Your password has been successfully reset.</p>
                <p>You can now log in to your account with your new password.</p>
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Login Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 