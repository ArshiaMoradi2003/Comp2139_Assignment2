@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center mb-0"><i class="fas fa-envelope me-2"></i>Password Reset Email Sent</h2>
            </div>
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-envelope-open-text fa-4x text-primary"></i>
                </div>
                <h3>Check Your Email</h3>
                <p class="lead">We've sent a password reset link to your email address.</p>
                <p>Please check your email and follow the instructions to reset your password.</p>
                <p class="text-muted">If you don't receive the email within a few minutes, please check your spam folder.</p>
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 