@model WebApplication1.ViewModels.ConfirmEmailViewModel
@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (Model.StatusMessage.StartsWith("Error"))
                    {
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error</h4>
                            <p>@Model.StatusMessage</p>
                            <hr>
                            <p class="mb-0">Please try registering again or contact support if the problem persists.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">Success!</h4>
                            <p>@Model.StatusMessage</p>
                            <hr>
                            <p class="mb-0">You can now log in to your account.</p>
                        </div>
                    }
                    <div class="text-center mt-4">
                        <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 