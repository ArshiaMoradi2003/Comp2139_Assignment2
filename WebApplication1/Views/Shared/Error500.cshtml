@{
    ViewData["Title"] = "Server Error";
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-1 text-muted">500</h1>
            <h2 class="mb-4">Internal Server Error</h2>
            <p class="lead mb-4">Something went wrong on our end. We're working to fix the issue.</p>
            <div class="mb-4">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Return to Home
                </a>
            </div>
            <div class="text-muted">
                <small>If the problem persists, please contact the administrator.</small>
            </div>
        </div>
    </div>
</div> 